{
  "name": "ddex-builder",
  "version": "0.4.0",
  "description": "DDEX XML builder with deterministic output and smart normalization",
  "keywords": [
    "ddex",
    "xml",
    "builder",
    "music",
    "deterministic",
    "canonicalization"
  ],
  "main": "index.js",
  "types": "index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/daddykev/ddex-suite.git",
    "directory": "packages/ddex-builder/bindings/node"
  },
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./index.js",
      "types": "./index.d.ts"
    }
  },
  "files": [
    "index.js",
    "index.d.ts",
    "*.node"
  ],
  "napi": {
    "name": "ddex-builder-node",
    "triples": {
      "defaults": true,
      "additional": [
        "x86_64-unknown-linux-musl",
        "aarch64-unknown-linux-gnu",
        "aarch64-apple-darwin",
        "aarch64-linux-android",
        "arm-linux-androideabi",
        "armv7-unknown-linux-gnueabihf"
      ]
    }
  },
  "scripts": {
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish -t npm",
    "artifacts": "napi artifacts",
    "version": "napi version",
    "test": "node test.js"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.4",
    "typescript": "^5.3.0"
  },
  "optionalDependencies": {
    "ddex-builder-win32-x64-msvc": "0.4.0",
    "ddex-builder-darwin-x64": "0.4.0",
    "ddex-builder-linux-x64-gnu": "0.4.0",
    "ddex-builder-linux-x64-musl": "0.4.0",
    "ddex-builder-linux-arm64-gnu": "0.4.0",
    "ddex-builder-darwin-arm64": "0.4.0",
    "ddex-builder-android-arm64": "0.4.0",
    "ddex-builder-android-arm-eabi": "0.4.0",
    "ddex-builder-linux-arm-gnueabihf": "0.4.0"
  }
}